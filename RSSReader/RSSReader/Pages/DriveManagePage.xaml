<Page x:Class="RSSReader.Pages.DriveManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RSSReader.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DriveManagePage"
      Loaded="Page_LoadedAsync">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="FileListLB" Grid.Row="0">
            
        </ListBox>
        <Button x:Name="LoginButton" Grid.Row="1" Content="Login" Click="LoginButton_Click"/>
    </Grid>
</Page>
